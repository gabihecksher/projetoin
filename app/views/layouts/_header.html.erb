
<div class="header-middle"><!--header-middle-->
			<div class="container">
				<div class="row">
					<div class="col-sm-4">
						<div class="logo pull-left">
							<%= image_tag('images/logo.png') %> 
							  
						</div>
						
					</div>
					<div class="col-sm-8">
						<div class="shop-menu pull-right">
							<ul class="nav navbar-nav">
								<% if logged_in? %>
									<li><%= link_to 'Show', current_user %></li>
								<% end %>
								<li><a href="cart.html"><i class="fa fa-shopping-cart"></i> Carrinho</a></li>
								<% if logged_in? %>
									<li><%= link_to 'Logout', logout_path, method: :delete, data: { confirm: 'Are you sure?' } %></li>
								<% else %>
									<li><%= link_to 'Login', login_path, method: :get %></li>
									<li><%= link_to 'Cadastro', new_user_path, method: :get %></li>
								<% end %>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div><!--/header-middle-->
	
		<div class="header-bottom"><!--header-bottom-->
			<div class="container">
				<div class="row">
					<div class="col-sm-9">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
						</div>
						<div class="mainmenu pull-left">
							<ul class="nav navbar-nav collapse navbar-collapse">
								<li><%= link_to('/static_pages/home') do %>Início<% end %></li>
								<li class="dropdown"><a href="#">Catálogo<i class="fa fa-angle-down"></i></a>
                                    <ul role="menu" class="sub-menu">
                                        <li><%= link_to('/static_pages/catalog') do %>Todos os livros<% end %></li>
										<li><%= link_to('/authors') do %>Autores<% end %></li>
										<li><%= link_to('/publishers') do %>Editoras<% end %></li>
                                    </ul>
                                </li> 
								
								<li><%= link_to('/static_pages/contact') do %>Contato<% end %></li>
							</ul>
						</div>
					</div>
					<div class="col-sm-3">
						<%= form_tag("/search", method: "get") do %>
						  <%= text_field_tag(:q) %>
						  <%= submit_tag("Buscar") %>
						<% end %>
					</div>
				</div>
			</div>
		</div><!--/header-bottom-->
	</header><!--/header-->
