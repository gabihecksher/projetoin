<style>
    .avatar{
      padding:0px 0px 0px 0px;
      border-radius: 50%; 
    }
    .avatar img{
      height: 150px;
      width: auto;
    }

    .description{
       word-wrap: break-word;
       width: 400px;
    }
</style>
<h1><center>Catálogo</center></h1>
  <div style="width: 100%; overflow: hidden;">
    <div style="width: 600px; float: left;">
    	<section>
    		<div class="container">
    			<div class="row">
    				<div class="col-sm-3">
    					<div class="left-sidebar">
    						<h2>Categorias</h2>
    						<div class="panel-group category-products" id="accordian"><!--category-productsr-->
    							
    							<% @categories.each do |category| %>
    									<div class="panel panel-default">
        								<div class="panel-heading">
        									 <%= link_to(category) do %>
                              <strong><%= category.name %></strong>
                            <% end %>
        								</div>
        							</div>
    							<% end %>
    							
    						</div><!--/category-products-->
    						
    						
    					
    				</div>
    				
    				
    			</div>
    		</div>
    		</div>
	    </section>
	   </div>
	

    <div style="margin-left: 620px;">
      <% @books.each do |book| %>
        <% if book.available_quantity >= 1 %>
        	<p class="avatar">
        	<%= image_tag book.avatar.url(:large) %>
    		</p>
            <h2> Nome: <%= book.name %> </h2>
            <p> Autor: <%= book.author.name %> </p>
            <p> Preço: <%= book.price %> </p>
            <p class="description"> Sinopse: <%= book.description %> </p>
            <%= link_to(book) do %><strong>Comprar</strong><% end %>
            <button type="button">Adicionar à estante</button><br><br>
        <% end %>
    <% end %>
    </div>
  </div>